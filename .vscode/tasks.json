{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "flutter",
      "command": "flutter",
      "group": "build",
      "label": "initializer_annotation | build_runner watch",
      "detail": "initializer_annotation",
      "args": [
        "pub",
        "run",
        "build_runner",
        "watch",
        "--delete-conflicting-outputs",
        // "--verbose"
      ],
      "options": {
        "cwd": "${workspaceFolder}\\initializer_annotation"
      },
      "isBackground": true,
      "icon": {
        "id": "run-all"
      },
      "problemMatcher": [
        "$dart-build_runner"
      ],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
    },
    {
      "type": "shell",
      "label": "initializer | generate-build-script",
      "group": "build",
      "command": "${workspaceFolder}\\tools\\generate-build-script.bat",
      "options": {
        "cwd": "${workspaceFolder}\\initializer",
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "type": "shell",
      "label": "example | generate-build-script",
      "group": "build",
      "command": "${workspaceFolder}\\tools\\generate-build-script.bat",
      "options": {
        "cwd": "${workspaceFolder}\\example",
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
  ]
}